/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background green
  transition all 0.5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    background none
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)

.order-leave
	background red
	transition all 0.5s
	transform translateX(0)
	max-height 60px
	padding 2rem 0 !important
	&.order-leave-active
		background ffffff
		max-height 0
		padding 0 !important
		transform translateX(120%)

.count-enter
	transition all .25s
	transform translateY(100%)
	&.count-enter-active
		transform translateY(0)

.count-leave
	transition all .25s
	position absolute
	left 0
	bottom 0
	transform translateY(0)
	&.count-leave-active
		transform translateY(-100%)