/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background green
  transition all 0.5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    background none
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)

.order-leave
	background red
	transition all 0.5s
	transform translateX(0)
	max-height 60px
	padding 2rem 0 !important
	&.order-leave-active
		background ffffff
		max-height 0
		padding 0 !important
		transform translateX(120%)